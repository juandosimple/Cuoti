{
    "$schema": "../gen/schemas/desktop-schema.json",
    "productName": "cuoti",
    "version": "0.1.12",
    "identifier": "com.cuoti.app",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:1420",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "Cuoti",
                "width": 1000,
                "height": 700,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkzRTU3RkJFQjc1OUI1ODAKUldTQXRWbTN2bi9sazZDUnUyZmNKYkMxUUNjdGtyRWhldy9lK0ZPVkRkRnJDb0x3VWR0eXhlMUkK",
            "endpoints": [
                "https://github.com/juandosimple/Cuoti/releases/latest/download/latest.json"
            ]
        }
    }
}